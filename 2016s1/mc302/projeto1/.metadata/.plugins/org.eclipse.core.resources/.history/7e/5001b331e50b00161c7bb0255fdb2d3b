package br.unicamp.ic.mc302.reservaDeQuartos;

public class Quarto {

	public static int TIPOS = 4;
	public static int SOLTEIRO = 1;
	public static int CASAL = 2;
	public static int SUITELUXO = 3;
	
	private int codigo;
	private int tipo;
	private double preco;
	private int capacidade;
	private String descricao;
	
	public Quarto(){
	}
	
	public Quarto(int codigo, int tipo, double preco, int capacidade, String descricao) {

		this.codigo = codigo;
		this.tipo = tipo;
		this.preco = preco;
		this.capacidade = capacidade;
		this.descricao = descricao;		
	}
	
	public int codigo(){
		return this.codigo;
	}
	
	public int tipo(){
		return this.tipo;
	}
	
	public double preco(){
		return this.preco;
	}
	
	public int capacidade(){
		return this.capacidade;
	}
	
	public String descricao(){
		return this.descricao;
	}
	
	public String toString(){
		
		String s = "";	
		s += "\nCodigo: "+codigo();
		
		if(tipo == SOLTEIRO)
			s += "\nTipo: Solteiro";
		else if(tipo == CASAL)
			s += "\nTipo: Casal";
		else if(tipo == SUITELUXO)
			s += "\nTipo: Suite de Luxo";
		
		s += "\nPreco: "+preco;
		s += "\nCapacidade: "+capacidade+" pessoas";
		s += "\nDescri√ßao "+descricao;
		s += "\n";
		
		return s;
	}
}
